<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mtstetaandroid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_home_fragment_to_details_fragment"
            app:destination="@+id/navigation_movie_details"
           />
    </fragment>
    <fragment
        android:id="@+id/navigation_movie_details"
        android:name="com.example.mtstetaandroid.ui.movieDetails.DetailsFragment"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.mtstetaandroid.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />
</navigation>